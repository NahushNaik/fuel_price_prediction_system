@model IEnumerable<ProjectDataAccess.FuelQuoteForm> 
@{
    ViewBag.Title = "FuelQuoteHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <head>

        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    </head>

@using (Html.BeginForm())
{
    // @Html.ValidationSummary(true, "Registeration Failed, fields.");

<div class="divcheck">
    <table class="table table-bordered table-dark">
        @if (Model.Count() != 0)
        {
            <thead>
                <tr>
                    <th><b>Order Id</b></th>
                    <th><b>Gallons Requested</b></th>
                    <th><b>Delivery Date</b></th>
                    <th><b>Delivery Address</b></th>
                    <th><b>Suggested Price</b></th>
                    <th><b>Total Amount Due</b></th>
                </tr>
            </thead>

            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelitem => item.OrderId)</td>
                    <td>@Html.DisplayFor(modelitem => item.GallonsRequested)</td>
                    <td>@Html.DisplayFor(modelitem => item.DeliveryDate)</td>
                    <td>@Html.DisplayFor(modelitem => item.DeliveryAddress)</td>
                    <td>@Html.DisplayFor(modelitem => item.SuggestedPrice)</td>
                    <td>@Html.DisplayFor(modelitem => item.TotalAmountDue)</td>
                </tr>
            }
        }
        else
        {
            <tr>No orders to display</tr>
        }
    </table>
    <input type="button" value="Go To Home" onclick="@("location.href='" + Url.Action("MainPage", "User") + "'")"/>
</div>
}
